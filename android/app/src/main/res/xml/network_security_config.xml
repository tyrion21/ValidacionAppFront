<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuración específica para el servidor HTTPS -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">192.168.7.26</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <trust-anchors>
            <!-- Confiar en certificados del sistema -->
            <certificates src="system"/>
            <!-- Confiar en certificados de usuario (para desarrollo) -->
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Configuración para todas las IPs privadas -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.0.1</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">10.0.0.1</domain>
        <domain includeSubdomains="true">172.16.0.1</domain>
    </domain-config>
    
    <!-- Configuración base para el resto de dominios -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>